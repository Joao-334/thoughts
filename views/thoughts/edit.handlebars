<div class="thought-form-container">
    <a href="/thoughts/dashboard" >Voltar</a>
    <h1>Editando seu Pensamento</h1>
    <form action="/thoughts/edit" method="post">
    <input type="hidden" name="id" value="{{thought.id}}">
        <div class="form-control">
            <label for="title">Pensamento</label>
            <input type="text" name="title" value="{{thought.title}}">
        </div>
        <input type="submit" value="Editar Pensamento" class="btn">
    </form>
</div>