<div class="home-header">

    {{#if search}}
        <h1>Você Está buscando por: {{search}}</h1>
        {{#if thoughtsQty}}
            <p>Foram encontrados <span>{{thoughtsQty}}</span> pensamentos</p>
        {{else}}
            <p>Nenhum pensamento encontrado com <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Alguns Pensamentos</h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Procurando um pensamento em específico?">
        <input type="submit" value="Buscar" class="btn">
    </form>

    <div class="order-container">
        <span>Ordernar Por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>



<div class="thoughts-container">
    {{#each thoughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>Por: <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>
